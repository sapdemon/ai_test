<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog id="departmentVH"
			title="{i18n>vh.departments.title}"
			items="{path: 'departments>/departments'}"
			search="onDepartmentSearch"
			confirm="onDepartmentConfirm"
			cancel="onDepartmentConfirm">
			<StandardListItem
				title="{departments>name}"
				description="{departments>id}"
				type="Active"/>
		</SelectDialog>
</core:FragmentDefinition>