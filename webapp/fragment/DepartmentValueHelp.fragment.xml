<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog id="departmentVH"
			title="{i18n>vh.departments.title}"
			items="{path: '/Departments'}"
			search="onDepartmentSearch"
			confirm="onDepartmentConfirm"
			cancel="onDepartmentConfirm">
			<StandardListItem
				title="{Name}"
				description="{DepartmentId}"
				type="Active"/>
		</SelectDialog>
</core:FragmentDefinition>